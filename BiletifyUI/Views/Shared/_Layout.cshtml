<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/website/css/style.css">
    <link rel="icon" href="https://www.freeiconspng.com/uploads/spotify-icon-18.png" type="image/x-icon" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <title>Biletify-Biletin Kolayı!</title>
</head>

<body>
    <div class="container">
        <div class="main-header">
            <nav class="navbar">
                <div class="logo">

                    <a asp-controller="Home" asp-action="Index"><i class="fa-brands fa-spotify"></i>&nbsp;Biletify</a>
                </div>
                <div class="menu">
                    <div class="menu-links">
                        <a asp-controller="Home" asp-action="Index">Anasayfa</a>
                        <a asp-controller="Home" asp-action="AboutUs">Hakkımızda</a>
                        <a asp-controller="Ticket" asp-action="Index" >Tüm Biletler</a>
                        <a asp-controller="Contact" asp-action="Index">İletişim</a>
                        
                    </div>
                    <div class="menu">
                        <div class="menu-links">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="User" asp-action="Index">@User.Identity.Name</a>
                          if (User.IsInRole("Admin") || User.IsInRole("Moderator"))
                          {
                              <a asp-area="Admin" asp-controller="Home" asp-action="Index">Panel</a>
                          }
                                <a asp-controller="Cart" asp-action="Index"><i class="fa-solid fa-cart-shopping"></i></a>
                             <a asp-controller="User" asp-action="Logout" class="log-in">Çıkış Yap</a>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="Login" class="log-in">Giriş Yap</a>
                    }
                </div>
                    </div>
                </div>

                <div class="menu-btn">
                    <i class="fa-solid fa-bars"></i>
                </div>
            </nav>
            @RenderBody()

        </div>
    </div>

    @await Html.PartialAsync("_FooterPartial")

    

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src="~/website/js/app.js"></script>
</body>

</html>

