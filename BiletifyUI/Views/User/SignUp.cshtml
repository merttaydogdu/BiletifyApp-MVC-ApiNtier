@model SignUpViewModel

<link rel="stylesheet" href="~/website/css/signup.css">
<link rel="stylesheet" href="~/website/css/style.css">

<h1 style="color: #1ED760;" class="display-6 text-center mt-3">Kayıt Ol</h1>
<hr style="color: #1ED760;">
<p style="color: #1ED760;" class="text-center">Biletify'e Hoş Geldiniz!</p>
<p style="color: #1ED760;" class="text-center">
    Hemen kayıt olun ve etkinliklerin keyfini çıkarın! Unutmayın, kayıt olmak ücretsizdir ve sadece birkaç saniyenizi alır. Siz de Biletify ailesine katılın ve harika etkinliklere kolayca erişin!
</p>
<hr style="color: #1ED760;" class="mb-0">
<form
    asp-area=""
    asp-controller="User"
    asp-action="SignUp"
    method="post"
>
    <div class="container text-center w-50">
        <div class="row">
            <div class="col-md-12 text-danger mt-1" asp-validation-summary="All"></div>
            <div class="col-md-6">
                <div class="form-group mt-3">
                    <label class="form-label" asp-for="FirstName"></label>
                    <input type="text" class="form-control" asp-for="FirstName"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mt-3">
                    <label class="form-label" asp-for="LastName"></label>
                    <input type="text" class="form-control" asp-for="LastName"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mt-3">
                    <label class="form-label" asp-for="UserName"></label>
                    <input type="text" class="form-control" asp-for="UserName"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mt-3">
                    <label class="form-label" asp-for="Email"></label>
                    <input type="email" class="form-control" asp-for="Email"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mt-3">
                    <label class="form-label" asp-for="Password"></label>
                    <input type="password" class="form-control" asp-for="Password"/>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group mt-3">
                    <label class="form-label" asp-for="RePassword"></label>
                    <input type="password" class="form-control" asp-for="RePassword"/>
                </div>
            </div>
            <div class="col-md-12">
                <div class="d-grid mt-4 w-50 mx-auto">
                    <button type="submit" class="log-in">Kayıt Ol</button>
                </div>
            </div>
        </div>
    </div>
</form>