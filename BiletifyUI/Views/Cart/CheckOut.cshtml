@model OrderViewModel

<link rel="stylesheet" href="~/website/css/checkout.css"/>

<h6 class="mt-3 text-center" style="color:#999999;">Ödeme</h6>
<hr />
<form
    asp-area=""  asp-controller="Cart"  asp-action="CheckOut" method="post">

    <div class="row">
        <div class="col-md-12 text-danger" asp-validation-summary="All"></div>
        <div class="col-md-8">
            <h1 class="display-6">Kişisel Bilgiler</h1>
            <hr />
            <div class="row g-4">
                <div class="col-md-4">
                    <label asp-for="FirstName" class="form-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="LastName" class="form-label"></label>
                    <input asp-for="LastName" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="City" class="form-label"></label>
                    <input asp-for="City" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="PhoneNumber" class="form-label"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="Address" class="form-label"></label>
                    <textarea asp-for="Address" class="form-control" ></textarea>
                </div>
                <div class="col-md-6">
                    <label asp-for="Note" class="form-label"></label>
                    <textarea asp-for="Note" class="form-control"></textarea>
                </div>
            </div>
            <h1 class="display-6 mt-4">Ödeme Bilgileri</h1>
            <hr />
            <div class="row g-4">
                <div class="col-md-6">
                    <label asp-for="CardName" class="form-label"></label>
                    <input asp-for="CardName" class="form-control" />
                </div>
                <div class="col-md-6">
                    <label asp-for="CardNumber" class="form-label"></label>
                    <input asp-for="CardNumber" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="ExpirationMonth" class="form-label"></label>
                    <input asp-for="ExpirationMonth" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="ExpirationYear" class="form-label"></label>
                    <input asp-for="ExpirationYear" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label asp-for="Cvc" class="form-label"></label>
                    <input asp-for="Cvc" class="form-control" />
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <h1 class="display-6">Ödeme Özeti</h1>
            <hr />
            <table>
                <thead>
                    <tr>
                        <th>Ürün</th>
                        <th>Fiyat</th>
                        <th>Adet</th>
                        <th>Toplam</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Cart.CartItems)
                    {
                        <tr>
                            <td>@item.Product.Name</td>
                            <td>@($"{item.Product.Price:C0}")</td>
                            <td>@item.Quantity</td>
                            <td>@($"{(item.Product.Price * item.Quantity):C0}")</td>
                        </tr>
                    }
                </tbody>
                <tfooter>
                    <tr>
                        <td class="text-end align-middle" colspan="2">Toplam Tutar:</td>
                        <td class="fs-3 text-end" colspan="2" style="color:#1ed760;">@($"{Model.Cart.TotalPrice():C0}")</td>
                    </tr>
                </tfooter>
            </table>
            <div class="d-grid">
                <button type="submit" class="btn mt-1 float-end" style="background-color:#1ad760;">Ödemeyi Gerçekleştir</button>
                <button asp-area="" asp-controller="Cart" asp-action="Index" type="submit" class="btn btn-secondary mt-1">Sepete Dön</button>
            </div>
            
        </div>
    </div>

</form>