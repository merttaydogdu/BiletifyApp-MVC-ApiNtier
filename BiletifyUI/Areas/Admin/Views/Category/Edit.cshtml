@model EditCategoryViewModel

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-1 m-0">Kategori Güncelleme</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategori Güncelleme</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"></h3>
                        </div>
                        <form asp-area="Admin"
                              asp-controller="Category"
                              asp-action="Edit"
                              method="post">

                            <div class="card-body row">

                                <div class="col-md-12">
                                    <div class="card card-dark">
                                        <div class="card-header">
                                            <h3 class="card-title">Kategori Bilgileri</h3>
                                        </div>
                                        <div class="card-body row">
                                            <div class="col-md-">
                                                <div class="form-group">
                                                    <label asp-for="Name"></label>
                                                    <input asp-for="Name" class="form-control" placeholder="Kategori Adı" />
                                                    <span class="text-danger" asp-validation-for="Name"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label asp-for="Url"></label>
                                                    <input asp-for="Url" class="form-control" placeholder="Örnek: muzik-biletleri">
                                                    <span class="text-danger" asp-validation-for="Url"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group text-center ">
                                                    <label>Seçenekler</label>
                                                    <div class="d-flex justify-content-center">
                                                        <div class="icheck-primary">
                                                            <input asp-for="IsActive" type="checkbox" />
                                                            <label asp-for="IsActive"></label>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <label asp-for="Description"></label>
                                                <div class="form-group">
                                                    <textarea asp-for="Description"></textarea>
                                                    <span class="text-danger" asp-validation-for="Description"></span>
                                                </div>

                                            </div>

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="btn-group w-100">
                                            <a asp-area="Admin" asp-controller="Category" asp-action="Index" class="btn btn-danger btn-xl">Vazgeç</a>
                                            <button type="submit" class="btn btn-dark btn-xl">Değişiklikleri Kaydet</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </form>

                    </div>
                </div>


            </div>
        </div>
    </section>
</div>


@section Styles {
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
}

@section Scripts {
    <script>
        $(function () {
            // Summernote
            $('#Description').summernote({
                "height": 200
            })
        })
        document.getElementById("image").addEventListener("change", function (e) {
            const selectedFile = e.target.files[0];
            $("#img-viewer").attr("src", window.URL.createObjectURL(selectedFile));
        })
    </script>
}

