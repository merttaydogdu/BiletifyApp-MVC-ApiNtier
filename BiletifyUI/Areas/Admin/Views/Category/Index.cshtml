 @model List<CategoryViewModel> 

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0">Kategori Listesi</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Kategori Listesi</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <!-- /.card-header -->
                        <div class="card-body">
                            <table id="myDataTable" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th width="30">Id</th>
                                        <th>Ürün</th>
                                        <th>Ürün Açıklaması</th>
                                        <th>Aktif</th>
                                        <th width="50">#</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var c in Model)
                                    {
                                        <tr>
                                            <td>@c.Id</td>
                                            <td>@c.Name</td>
                                            <td>@c.Description</td>
                                            <td>
                                                <form asp-area="Admin" asp-controller="Category" asp-action="UpdateIsActive" asp-route-id="@c.Id" id="formIsActive_@c.Id">
                                                    <div class="custom-control custom-switch">
                                                        <input onchange="document.getElementById('formIsActive_@c.Id').submit();"
                                                               type="checkbox" class="custom-control-input"
                                                        @(c.IsActive ? "checked" : "")
                                                               id="isActive_@c.Id">
                                                        <label class="custom-control-label" for="isActive_@c.Id"></label>
                                                    </div>
                                                </form>
                                            </td>
                                            <td>
                                                <a asp-area="Admin" asp-controller="Category" asp-action="Edit" asp-route-id="@c.Id" class="btn btn-warning btn-sm"><i class="fa-solid fa-pen-to-square"></i></a>
                                                <a asp-area="Admin" asp-controller="Category" asp-action="Trash" asp-route-id="@c.Id" class="btn btn-danger btn-sm"><i class="fa-solid fa-trash"></i></a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
@section Scripts {
    @await Html.PartialAsync("_DataTablesScriptsPartial")
}

@section Styles {
    @await Html.PartialAsync("_DataTablesStylesPartial")
}