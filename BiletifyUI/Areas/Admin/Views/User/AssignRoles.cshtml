@model UserRolesViewModel

<div class="content-wrapper">
    <section class="content-header">
        <div class="container-fluid">
            <div class="d-flex justify-content-between mb-2">
                <div>
                    <h1>Kullanıcı/Rol Atama</h1>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <form asp-area="Admin"
                          asp-controller="User"
                          asp-action="AssignRoles"
                          method="post">

                        
                        <div class="card card-secondary">
                            <div class="card-header">
                                <h3 class="card-title"></h3>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-12 text-danger" asp-validation-summary="All"></div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Kullanıcı Id: </label>
                                            <span>@Model.Id</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Kullanıcı Ad Soyad: </label>
                                            <span>@Model.Name</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <label>Kullanıcı Adı: </label>
                                            <span>@Model.UserName</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-9">
                                        <input asp-for="Id" type="hidden" />
                                        <input asp-for="UserName" type="hidden" />
                                        <input asp-for="Name" type="hidden" />
                                        @for (int i = 0; i < Model.Roles.Count; i++)
                                        {
                                            <div class="icheck-primary d-inline mr-3">
                                                <input asp-for="@Model.Roles[i].IsAssigned" />
                                                <label asp-for="@Model.Roles[i].IsAssigned">@Model.Roles[i].RoleName</label>
                                                <input asp-for="@Model.Roles[i].RoleId" type="hidden" />
                                                <input asp-for="@Model.Roles[i].RoleName" type="hidden" />
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>

                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-dark btn-lg btn-block">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>


@section Styles {
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
}

