 @model AddUserViewModel

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="mt-1 m-0">Yeni Kullanıcı</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home">Anasayfa</a></li>
                        <li class="breadcrumb-item active">Yeni Kullanıcı</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="card card-secondary">
                        <div class="card-header">
                            <h3 class="card-title"></h3>
                        </div>
                        <form asp-area="Admin" asp-controller="User" asp-action="Create" method="post" >
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="card-body row">

                                <div class="col-md-9">
                                    <div class="card card-dark">
                                        <div class="card-header">
                                            <h3 class="card-title">Kullanıcı Bilgileri</h3>
                                        </div>
                                        <div class="card-body row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="FirstName"></label>
                                                    <input asp-for="FirstName" class="form-control" placeholder="Adı giriniz">
                                                    <span class="text-danger" asp-validation-for="FirstName"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="LastName"></label>
                                                    <input asp-for="LastName" class="form-control" placeholder="Soyadı giriniz">
                                                    <span class="text-danger" asp-validation-for="LastName"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="UserName"></label>
                                                    <input asp-for="UserName" class="form-control" placeholder="Kullanıcı adı giriniz">
                                                    <span class="text-danger" asp-validation-for="UserName"></span>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label asp-for="Email"></label>
                                                    <input asp-for="Email" class="form-control" placeholder="Mail adresi giriniz">
                                                    <span class="text-danger" asp-validation-for="Email"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3">
                                            <div class="card card-dark">
                                                <div class="card-header">
                                                    <h3 class="card-title">Rol Seç (En az bir rol seçilmeli)</h3>
                                                </div>
                                                <div class="card-body">
                                                    @for (int i = 0; i < Model.Roles.Count; i++)
                                                    {
                                                        <div class="icheck-primary mb-4">
                                                            <input  asp-for="@Model.Roles[i].IsAssigned"/>
                                                             <label asp-for="@Model.Roles[i].IsAssigned">@Model.Roles[i].RoleName</label>
                                                        </div>
                                                    }
                                                    <div class="text-danger mt-2">@ViewBag.RoleErrorMessage</div>
                                                </div>
                                            </div>
                                        </div>

                                <div class="col-md-12">
                                    <div class="text-center text-danger mb-2">Parola standarttır.!</div>

                                    <div class="btn-group w-100">
                                        <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-danger btn-xl">Vazgeç</a>
                                        <button type="submit" class="btn btn-dark btn-xl">Kaydet</button>
                                    </div>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>


            </div>
        </div>
    </section>
</div>

@section Styles {
    <!-- iCheck for checkboxes and radio inputs -->
    <link rel="stylesheet" href="~/admin/plugins/icheck-bootstrap/icheck-bootstrap.min.css">

  
}



